$('.answer-errors').html("<%= j render('shared/errors', resource: @answer) %>")

<% if !@answer.errors.present? %>
  $('.notifications').html("<%= j render('shared/notifications') %>")

  <% if @answer.best? %>
    $('#best-answer').html("<%= j render('best_answer', best_answer: @answer) %>")
  <% else %>
    $('.answers').html('<%= j render(@question.answers_without_best) %>')
  <% end %>
<% end %>
